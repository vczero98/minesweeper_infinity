<% include ./partials/header %>

<div class="container">
	<h1>Registration</h1>
	<div id="register" class="content-back">
		<form class="form-horizontal" id="register-form" action="/register" method="POST" onsubmit="return validateForm()">
			<div class="form-group">
				<label class="col-sm-4 control-label">Username</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" placeholder="Username" name="username" maxlength="15" required>
				</div>
			</div>
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-4 control-label">Password</label>
				<div class="col-sm-8">
					<input type="password" class="form-control" placeholder="Password" id="input-password" name="password" minlength="6" required>
				</div>
			</div>
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-4 control-label">Confirm password</label>
				<div class="col-sm-8">
					<input type="password" class="form-control" placeholder="Confirm password" id="confirm-password" required>
				</div>
			</div>
			<div class="col-sm-offset-4 col-sm-8">
				<p class="form-error" id="display-error"></p>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<button type="submit" class="btn btn-primary custom-theme">Register</button>
				</div>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript" src=/js/register.js></script>

<% include ./partials/footer %>
