<div id="main-screen">
	<div id="main-game">
		<!-- <div id="head">
			<p class="counter" id="displayTime"></p>
			<p id="title"><i class="fa fa-bomb" aria-hidden="true"></i>Minesweeper!</p>
			<p class="counter" id="displayMinesLeft"></p>
		</div> -->
		<div id="game"></div>
		<div id="game-display-container">
			<div class="effect7" id="game-display">
				<p>Waiting for 3 more players...</p>
			</div>
		</div>
		<div id="game-items-container">
			<div class="game-item" id="item-radar">
				<img src="/images/game/radar_md.png">
				<p>∞</p>
			</div>
			<div class="game-item empty" id="item-freeze">
				<img src="/images/game/freeze_md.png">
				<p>0</p>
			</div>
			<div class="game-item empty" id="item-weightless-shoes">
				<img src="/images/game/wshoes_md.png">
				<p>0</p>
			</div>
			<div class="game-item" id="item-blurred-vision">
				<img src="/images/game/bvision_md.png">
				<p>∞</p>
			</div>
			<div class="game-item empty" id="item-lucky-moves">
				<img src="/images/game/lucky_md.png">
				<p>0</p>
			</div>
		</div>
	</div>
	<div id="stat-bar">
		<div id="stat-header">
			<h2><%= room.name %></h2>
			<hr>
			<h3><%= room.time > 0 ? room.time : 'Timer off'%></h3>
			<hr>
			 <table id="players-table">
				 <tbody></tbody>
			</table>
		</div>
		<hr>
		<div id="chat">
			<div id="chat-messages">
			</div>
			<form id="chat-post" onsubmit="return inputMessage()">
				<input type="text" id="chat-message" autocomplete="off">
				<button type="submit" id="send-message">Send</button>
			</form>
		</div>
		<hr>
		<div class="" id="stat-footer">
			<a href="/rooms" type="submit" class="btn btn-danger custom-theme btn-lg">Leave room</a>
		</div>
	</div>
</div>
